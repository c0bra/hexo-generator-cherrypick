<% posts.each(function(post) { %>
<article class="post">
  <header class="post-header">
    <span class="post-meta">
      <time datetime="<%= date_iso(post.date) %>" itemprop="datePublished">
          <%= date(post.date) %>
      </time>
    </span>
    <h3 class="post-title"><a href="<%- config.root %><%- post.path %>"><%- post.title %></a></h3>
  </header>
  <section class="post-excerpt">
    <p>
    <% if (post.excerpt){ %>
      <%- post.excerpt %>
    <% } else { %>
      <%- post.content.replace(/<(?:.|\n)*?>/gm, '').substr(0, 220) %>
    <% } %>
    </p>
    <% if (theme.excerpt_link) { %>
    <p>
        <a href="<%- config.root %><%- post.path %>" class="excerpt-link"><%= theme.excerpt_link %>...</a>
    </p>
    <% } %>
  </section>
</article>
<% }); %>